<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_loading_bg"
    android:orientation="vertical"
    tools:context="com.android.cloud.ui.dialog.DialogActivity">
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="loadingdialog"
    android:id="@+id/btn_loading"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="只有title"
        android:id="@+id/btn_title"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title和message"
        android:id="@+id/btn_title_message"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入框dialog"
        android:id="@+id/btn_edittext"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间选择器"
        android:id="@+id/btn_date"/>
</LinearLayout>
